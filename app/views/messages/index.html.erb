<p id="notice"><%= notice %></p>

<h1>投稿一覧</h1>
<h2>スレッド名：<%= @board.title %></h2>

<table>
  <thead>
    <tr>
      <th>スレッド名</th>
      <th>投稿者</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.message %></td>
        <td><%= message.user.username %></td>

        <td><%= link_to '詳細', board_message_path(@board, message) %></td>

        <% if message.user_id == current_user.id %>
        <td><%= link_to '編集', edit_board_message_path(@board, message) %></td>
        <td><%= link_to '削除', board_message_path(@board, message), method: :delete, data: { confirm: '本当に削除しますか?' } %></td>
        <% end %>

        </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '投稿する', new_board_message_path %>
